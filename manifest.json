{
  "manifest_version": 3,
  "version": "0.014",
  "name": "Right-click Clipboard",
  "background": {
    "service_worker": "primary-loader.js"
  },
  "action": {
    "default_title": "Show tooltip",
    "default_popup": "index.html"
  },

  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "contentSettings",
    "contextMenus",
    "input",
    "<all_urls>",
    "management",
    "scripting",
    "search",
    "tabs",
    "webRequest",
    "webNavigation",
    "storage",
    "unlimitedStorage",
    "notifications",
    "idle",
    "alarms"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}